<main>
  <div class="d-flex justify-content-end p-2">
    <legend class="">Productos</legend>
  </div>
  <section>
    <div class="px-1">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Código</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Imagen</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
                <tr>
                  <td>{{this.title}}</td>
                  <td>{{this.description}}</td>
                  <td>{{this.code}}</td>
                  <td>{{this.price}}</td>
                  <td>{{this.stock}}</td>
                  <td class="px-4">
                    <a
                      onclick="showImageIdentifiedBy('{{this.thumbnail}}')"
                      class="btn-sm clickable"
                    ><i class="fa-regular fa-image"></i></a>
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan="6">No hay productos</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</main>